{
  "compilerOptions": {
    
    "target": "es2019",                          
    "module": "commonjs",                     
    "moduleResolution": "node",
    "rootDir": "src",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,                           
    "esModuleInterop": true,                   
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true    
  }
}